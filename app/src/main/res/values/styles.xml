<resources>
    <!-- TextInputLayout style -->
    <style name="Widget.BetaApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange</item>
        <item name="hintTextColor">@color/orange</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.BetaApp.MediumComponent</item>
    </style>

    <!-- Primary Button -->
    <style name="Widget.BetaApp.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.BetaApp.MediumComponent</item>
    </style>

    <!-- Secondary Button -->
    <style name="Widget.BetaApp.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
        <item name="shapeAppearance">@style/ShapeAppearance.BetaApp.MediumComponent</item>
    </style>

    <!-- Shape appearance -->
    <style name="ShapeAppearance.BetaApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>