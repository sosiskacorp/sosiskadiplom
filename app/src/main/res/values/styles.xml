<resources>
    <style name="Widget.BetaApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange</item>
        <item name="hintTextColor">@color/orange</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Primary Button -->
    <style name="Widget.BetaApp.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
    </style>

    <!-- Secondary Button -->
    <style name="Widget.BetaApp.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
    </style>
</resources>