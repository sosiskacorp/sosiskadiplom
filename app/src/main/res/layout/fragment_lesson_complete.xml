<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lessonCompleteRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Заголовок "Урок завершён" -->
    <TextView
        android:id="@+id/tvLessonComplete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lesson_completed"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Количество набранных поинтов -->
    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/points_earned_placeholder"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvLessonComplete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Процент правильных ответов -->
    <TextView
        android:id="@+id/tvCorrectPercentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/correct_percentage_placeholder"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvPoints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Затраченное время -->
    <TextView
        android:id="@+id/tvTimeSpent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/time_spent_placeholder"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvCorrectPercentage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Кнопка "Завершить уровень" -->
    <Button
        android:id="@+id/btnFinishLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/finish_level"
        app:layout_constraintTop_toBottomOf="@id/tvTimeSpent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
